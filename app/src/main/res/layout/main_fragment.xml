<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
  <data>

      <variable
          name="vm"
          type="com.innobles.demoappassigment.ui.main.MainViewModel" />
      <variable
          name="frament"
          type="com.innobles.demoappassigment.ui.main.RegistrationFragment" />
  </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/registration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.RegistrationFragment">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/tvEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/end"
            app:layout_constraintStart_toStartOf="@id/start"
            app:layout_constraintTop_toTopOf="@id/top"
            android:inputType="textEmailAddress"
            android:text="@={vm.email}"
            android:hint="@string/enter_email"

            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/tvPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@id/tvEmail"
            app:layout_constraintStart_toStartOf="@id/tvEmail"
            app:layout_constraintTop_toBottomOf="@id/tvEmail"
            android:inputType="textPassword"
            android:text="@={vm.password}"
            android:hint="@string/enter_password"

            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/tvPasswordConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@id/tvPassword"
            app:layout_constraintStart_toStartOf="@id/tvPassword"
            app:layout_constraintTop_toBottomOf="@id/tvPassword"
            android:inputType="textPassword"
            android:text="@={vm.confirmPassword}"
            android:hint="@string/enter_confirm_password"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@id/tvPasswordConfirm"
            app:layout_constraintStart_toStartOf="@id/tvPasswordConfirm"
            app:layout_constraintTop_toBottomOf="@id/tvPasswordConfirm"
            android:onClick="@{()->frament.onSubmit()}"
            android:text="@string/submit"


            />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".9" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>